{
  "name": "salla-theme-raed",
  "version": "2.0.0",
  "description": "Advanced e-commerce theme for Salla platform with modern design, PWA support, and enhanced performance",
  "main": "dist/index.js",
  "scripts": {
    "dev": "webpack serve --mode development --config webpack.config.js",
    "build": "webpack --mode production --config webpack.config.js",
    "build:dev": "webpack --mode development --config webpack.config.js",
    "build:analyze": "npm run build -- --analyze",
    "start": "npm run dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint 'src/**/*.{css,scss}'",
    "lint:css:fix": "stylelint 'src/**/*.{css,scss}' --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,scss,json,md}'",
    "format:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx,css,scss,json,md}'",
    "clean": "rimraf dist public/css public/js",
    "deploy": "npm run build && salla theme publish",
    "deploy:dev": "npm run build:dev && salla theme publish --dev",
    "sync": "salla theme sync",
    "validate": "npm run lint && npm run lint:css && npm run test:ci",
    "prepare": "husky install",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./reports/lighthouse.html",
    "bundle-analyzer": "webpack-bundle-analyzer dist/stats.json",
    "size-limit": "size-limit",
    "precommit": "lint-staged",
    "postinstall": "patch-package"
  },
  "keywords": [
    "salla",
    "theme",
    "e-commerce",
    "pwa",
    "responsive",
    "rtl",
    "arabic",
    "performance",
    "accessibility",
    "modern",
    "webpack",
    "scss",
    "javascript"
  ],
  "author": {
    "name": "Salla Team",
    "email": "developers@salla.sa",
    "url": "https://salla.sa"
  },
  "contributors": [
    {
      "name": "omom04922-spec",
      "email": "omom04922@gmail.com",
      "url": "https://github.com/omom04922-spec"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/omom04922-spec/theme-raed.git"
  },
  "bugs": {
    "url": "https://github.com/omom04922-spec/theme-raed/issues"
  },
  "homepage": "https://github.com/omom04922-spec/theme-raed#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "dependencies": {
    "@salla.sa/twilight": "^2.0.0",
    "axios": "^1.6.0",
    "lodash": "^4.17.21",
    "swiper": "^11.0.0",
    "vanilla-lazyload": "^17.8.0",
    "intersection-observer": "^0.12.2",
    "focus-visible": "^5.2.0",
    "what-input": "^5.2.12"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.23.0",
    "@babel/runtime": "^7.23.0",
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@size-limit/preset-app": "^10.0.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.3.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^8.0.3",
    "imagemin": "^8.0.1",
    "imagemin-webp-webpack-plugin": "^3.3.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.3.0",
    "lint-staged": "^15.0.2",
    "mini-css-extract-plugin": "^2.7.6",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.2",
    "semantic-release": "^22.0.7",
    "size-limit": "^10.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.3.1",
    "terser-webpack-plugin": "^5.3.9",
    "url-loader": "^4.1.1",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "peerDependencies": {
    "@salla.sa/cli": ">=2.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "size-limit": [
    {
      "path": "dist/js/app.js",
      "limit": "100 KB"
    },
    {
      "path": "dist/css/app.css",
      "limit": "50 KB"
    }
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.min.js",
      "!src/assets/vendor/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}