# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 100

# JavaScript, TypeScript, JSON files
[*.{js,jsx,ts,tsx,json,json5}]
indent_size = 2
max_line_length = 100

# CSS, SCSS, Less files
[*.{css,scss,sass,less}]
indent_size = 2
max_line_length = 120

# HTML, Twig, Vue files
[*.{html,htm,twig,vue,xml}]
indent_size = 2
max_line_length = 120

# YAML files
[*.{yml,yaml}]
indent_size = 2
max_line_length = 80

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{ini,cfg,conf,config}]
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 4
max_line_length = 120

# Batch files
[*.{bat,cmd}]
end_of_line = crlf
indent_size = 4

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# PHP files
[*.php]
indent_size = 4
max_line_length = 120

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefile
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Package files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2

# Environment files
[.env*]
indent_size = 2
max_line_length = 120

# Git files
[{.gitignore,.gitattributes,.gitmodules}]
indent_size = 2

# Docker files
[{Dockerfile,docker-compose*.yml,docker-compose*.yaml}]
indent_size = 2

# License files
[{LICENSE,LICENCE,COPYRIGHT}]
max_line_length = 80

# Changelog files
[{CHANGELOG,CHANGELOG.md,HISTORY,HISTORY.md}]
max_line_length = 80

# README files
[{README,README.md,readme.md}]
max_line_length = 80